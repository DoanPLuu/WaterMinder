{
  "manifest_version": 3,
  "name": "Water Reminder",
  "version": "1.0",
  "description": "Reminds you to drink water based on your weight and activity.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["notifications", "storage", "alarms"],
  "icons": {
    "48": "icon.png"
  }
}
